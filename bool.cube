-- The Bool type.

Bool :: *;
Bool = forall (bool::*) . bool->bool->bool;

False :: Bool;
False = \ (bool::*) (false::bool) (true::bool) -> false;

True  :: Bool;
True = \ (bool::*) (false::bool) (true::bool) -> true;

if :: forall (a::*) . Bool -> a -> a -> a;
if a b t f = b a f t;

not :: Bool -> Bool;
not b = if Bool b False True;

and :: Bool -> Bool -> Bool;
and x y = if Bool x y False;

or :: Bool -> Bool -> Bool;
or x y = if Bool x True y;
